.container

  .jumbotron
    .page-header
      %h1 Sign In
    .form-horizontal
      =form_tag url: sign_in_path do |f|
        .form-group
          =label_tag :email, 'Email',class: 'col-md-2 control-label'
          .col-md-10
            =email_field_tag :email, '', class: 'form-control'
        .form-group
          =label_tag :password, 'Password',class: 'col-md-2 control-label'
          .col-md-10
            =password_field_tag :password, '', class: 'form-control'
        .form-group
          .col-md-offset-2.col-md-10
            =submit_tag 'Sign-In', class: 'btn btn-primary btn-large form-control'
