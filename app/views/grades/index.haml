.container
  .page-header
    %h1 The Big Board
  -while @round < 23
    %h2="Round #{@round}"
    %table.table.table-striped
      -@picks.where(round: @round).each do |pick|

        %thead
          %tr
            %th="#{pick.name} (#{pick.user.team_name})"
        %tbody
          %tr
            %td="#{pick.grades.grade.class_selector
              join}"


    -@round+=1
