!!!html
%html
  %head
    %title TelevisionDraftApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body

  =render 'layouts/nav' if !@diable_nav

  .container
    -if flash[:notice]
      .alert.alert-success
        =notice
    -if flash[:alert]
      .alert.alert-danger
        =alert
  = yield
