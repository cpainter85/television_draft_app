.container
  .well.password_form
    %h1.text-center="Change Password"
    .form-horizontal
      =form_for @user do |f|
        .form-group
          =f.label :password, 'New Password', class: 'col-sm-4 control-label'
          .col-sm-8
            =f.password_field :password, class: 'form-control'
        .form-group
          =f.label :password_confirmation, 'Confirm Password', class: 'col-sm-4 control-label'
          .col-sm-8
            =f.password_field :password_confirmation, class: 'form-control'
        .form-group
          .col-sm-offset-4.col-sm-8
            =f.submit 'Change Password', class: 'btn btn-info btn-lg'
